script Misc_MessageEnd{
	waitmessage
	waitbuttonpress
	releaseall
	end
}

script Misc_Follower_Mode_Off_Message{
	msgbox (Misc_Follower_Mode_Off_Message_Text)
	goto (Misc_MessageEnd)
}

text Misc_Follower_Mode_Off_Message_Text{
	"Follower Mode set to!\n"
	"Follower deactivated$"
}

